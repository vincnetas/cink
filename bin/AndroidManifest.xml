<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xmedic.cink"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="17" />

    <application
        android:name="com.xmedic.cink.App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.xmedic.cink.StartupActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.xmedic.cink.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.xmedic.cink.ChooseDomainActivity"
            android:label="@string/title_activity_choose_domain" >
        </activity>
        <activity
            android:name="com.xmedic.cink.QuestionActivity"
            android:label="@string/title_activity_question" >
        </activity>
        <activity
            android:name="com.xmedic.cink.KnotGameActivity"
            android:label="@string/title_activity_knot_game" >
        </activity>
        <activity
            android:name="com.xmedic.cink.PrepareActivity"
            android:label="@string/title_activity_prepare" >
        </activity>
        <activity
            android:name="com.xmedic.cink.CheckKnotActivity"
            android:label="@string/title_activity_chcek_knot" >
        </activity>
    </application>

</manifest>